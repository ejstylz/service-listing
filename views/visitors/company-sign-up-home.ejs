<% layout('layouts/companySignUpBoilerplate') -%>

<section class="company_sign_up_head_bottom">
	<div class="overlay">
		<div class="container">
			<div class="center_contents text-center">
				<h2>Work Your Way</h2>
				<h6>Bring in your Company Skills and Receive Leads!</h6>
				<div class="become_seller_button">
					<a class="btn btn-gbz-success" href="/become-a-seller-overview">Become a Seller</a>
				</div>
			</div>
		</div>
		<div class="">
			<div class="bottom_contents">
				<div class="row">
					<div class="col-sm-4">
						<div class="single_part">
							<h5>Number of Companies in Waiting List</h5>
							<h1>245</h1>
						</div>
					</div>
					<div class="col-sm-4">
						<div class="single_part">
							<h5>Monthly Plan</h5>
							<h1>$45.00</h1>
						</div>
					</div>
					<div class="col-sm-4">
						<div class="single_part">
							<h5>Price Range</h5>
							<h1>$50 - $50,000</h1>
						</div>
					</div>
				</div>
				<p><b>Note:</b> Until 3,000 companies are registered in the Gabazzo Platform we will be charging $45.00
					monthly, meanwhile it is Completely Free to Use! but a fee of $25 will be Applied while signing up.
				</p>
			</div>
		</div>
	</div>
</section>


<section class="recently_joined">
	<div class="container_gbz">
		<div class="single_part">
			<h2>Companies Recently Joined</h2>
			<div class="nearby_companies">
				<div class="nearby_companies_container">
					<div class="owl-carousel">

						<% compa.forEach(function(company, i) { %>
						<div class="item">
							<div class="single_company">
								<div class="company_title">
									<h3><%= company.companyName %></h3>
								</div>
								<div class="the_inner">
									<div class="header_part">
										<div class="row">
											<div class="col-4 pl-1 pr-1">
												<div class="company-profile-pic">
													<img src="<%= company.logo %>" alt="" />
												</div>
											</div>
											<div class="col-8 px-1">

												<div class="stars">
													<h5>
														<i class="fa fa-star" aria-hidden="true"></i>
														<span class="star"><%= company.averageReview %></span> <span
															class="amount">(<%= company.reviews.length %>
															Reviews)</span>
													</h5>
												</div>
												<div class="company-status">
													<span class="online">- Online</span>
												</div>
												<div class="business_hours">
													<%   let d = new Date(); %>
													<% if (d.getDay() === 0) { %>
													<h4><%= company.sundayFrom %> - <%= company.sundayTo %></h4>
													<% } else if(d.getDay() === 1) { %>
													<h4><%= company.mondayFrom %> - <%= company.mondayTo %></h4>
													<% } else if (d.getDay() === 2) { %>
													<h4><%= company.tuesdayFrom %> - <%= company.tuesdayTo %></h4>
													<% } else if (d.getDay() === 3) { %>
													<h4><%= company.wednesdayFrom %> - <%= company.wednesdayTo %></h4>
													<% } else if (d.getDay() === 4) { %>
													<h4><%= company.thursdayFrom %> - <%= company.thursdayTo %></h4>
													<% } else if (d.getDay() === 5) { %>
													<h4><%= company.fridayFrom %> - <%= company.fridayTo %></h4>
													<% } else if (d.getDay() === 6) { %>
													<h4><%= company.fridayFrom %> - <%= company.fridayTo %></h4>
													<% } else if (d.getDay() === 7) { %>
													<h4><%= company.saturdayFrom %> - <%= company.saturdayTo %></h4>
													<% } else { %>
													<h4>8 AM - 5 PM</h4>
													<% } %>
												</div>
												<h6>Address: <span><%= company.location %></span></h6>
											</div>
										</div>
									</div>
									<div class="company_body">
										<div class="about_section">
											<h4>About</h4>
											<p class="morea"><%= company.about.substring(0,100) %></p>
										</div>
									</div>
									<div class="category_text">
										<span><b>Category:</b> <%= company.serviceCategory %></span>
									</div>
								</div>
								<div class="view_more">
									<ul>
										<li><a class="btn btn-gbz-success" href="#company<%= i %>"
												data-toggle="modal">Message</a></li>
										<li><a class="btn btn-gbz-success"
												href="/company-profile/<%= company._id %>">View More</a></li>
									</ul>
								</div>
							</div>
						</div>
						<% }); %>

					</div>
				</div>
			</div>
		</div>
	</div>
</section>


<section class="how_works_gabazzo">
	<div class="container_gbz">
		<h3>How It Works</h3>
		<div class="row">
			<div class="col-sm-4">
				<div class="single_part">
					<div class="icon">
						<img src="../images/icons/creating_icon.png" class="black_icon" alt="" />
						<img src="../images/icons/creating_icon_white.png" class="white_icon" alt="" />
					</div>
					<h5>1. Create a Service or Products</h5>
