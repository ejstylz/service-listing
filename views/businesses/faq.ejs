<% layout('layouts/companyFaqBoilerplate') -%>

<% var alph = ["a", "b", "c", "d", "e", "f", "g", "h", "i", "j", "k", "l", "m", "n", "o", "p", "q", "r", "s", "t", "u", "v", "w", "x", "y", "z"] %>


<section class="dashboard_banner">
	<div class="overlay">
		<div class="container">
			<h1>Dashboard <b>/</b> <span>FAQ's</span></h1>
		</div>
	</div>
</section>


<section class="dashboard_middle">
	<div class="container_gbz">
		<div class="dashboard_faqs dashboard_wrap">
			<div class="dash_faqs_wrapper">
				<div class="dash_single_faqs_area">
					<div class="header">
						<div class="row">
							<div class="col-md-8">
							</div>
							<div class="col-md-4 text-right">
								<a class="add_faq_button btn btn-gbz-success" href="javascript:void(0)"><i
										class="fa  fa-plus" aria-hidden="ture"></i> Add FAQ</a>
							</div>
						</div>
					</div>
					<div class="dash_faqs_inner">
						<div class="add_faq_input_field">
							<form action="/faq" method="POST">
								<div class="form">
									<div class="form-group">
										<input type="text" name="question"
											placeholder="Add a question: e.g., What you need to start this project"
											class="form-control" />
									</div>
									<div class="form-group">
										<textarea
											placeholder="Add an answer: e.g., After getting all the required information from you."
											name="answer" id="" cols="30" rows="3" class="form-control"></textarea>
										<div class="text text-right">
											<small class="form-text">0/300 Characters</small>
										</div>
									</div>
									<div class="action_button">
										<ul>
											<li><a class="btn btn-outline-gbz-success cancel_faq"
													href="javascript:void(0)">Cancel</a></li>
											<li><button type="submit" class="btn btn-gbz-success">ADD</button></li>
										</ul>
									</div>
								</div>
							</form>
						</div>

						<% for (var i = 0; i < faq.length; i++) { %>
						<div class="set">
							<a href="#">
								<%= faq[i].question %>
								<i class="fa fa-plus" aria-hidden="true"></i>
							</a>
							<div class="existing_faq">
								<form action="/faq/<%= faq[i].id %>?_method=PUT" method="POST">
									<div class="form">
										<div class="form-group">
											<input type="text" name="question" value="<%= faq[i].question %>"
												class="form-control" />
										</div>
										<div class="form-group">
											<textarea name="answer" id="" cols="30" rows="3"
												class="form-control"><%= faq[i].answer %></textarea>
											<div class="text text-right">
												<small class="form-text">0/300 Characters</small>
											</div>
										</div>
										<div class="action_button">
											<ul>
												<li><a href="#<%= alph[i] %>" class="btn btn-danger"
														data-toggle="modal">Delete</a>
												</li>
												<li><button type="submit" class="btn btn-gbz-success">Update</button>
												</li>
											</ul>
										</div>
									</div>
								</form>
							</div>
						</div>
						<% } %>
					</div>
				</div>

				<hr class="my-5" />
			</div>
		</div>
	</div>
</section>

<!-- Delete FAQ Modal Starts From Here -->
<% for (var i = 0; i < faq.length; i++) { %>
<div class="modal dash_sp_modal dashboard_wrap fade" id="<%= alph[i] %>">
	<div class="modal-dialog modal-lg modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h3>Delete The FAQ</h3>
				<button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"
						aria-hidden="true"></i></button>
			</div>
			<div class="modal-body">
				<form action="/faq/<%= faq[i].id %>?_method=DELETE" method="POST">
					<div class="form">

						<div class="form-group">
							<h2>Are You sure you want to delete this FAQ?</h2>
						</div>

						<div class="save_button text-right">
							<button type="submit" class="btn btn-danger">Delete</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<% } %>
<!-- Delete FAQ Modal Ends Here -->