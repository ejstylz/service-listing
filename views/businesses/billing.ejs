<% layout('layouts/settingsBoilerplate') -%>

<div class="profile_setting_wrap">
	<div class="container-fluid">
		<div class="row">
			<!-- Left Menu Starts From Here -->
			<div class="col-md-3">
				<nav class="navbar navbar-expand-lg">
					<div class="ps_left_menu border collapse navbar-collapse h-100" id="responsive-bar">
						<ul class="list-group list-group-flush list-group-sidemenu">
							<li class="list-group-item"><a href="/company-settings/account">Account</a></li>
							<li class="list-group-item"><a href="/company-settings/security">Security</a></li>
							<li class="list-group-item"><a href="/company-settings/notifications">Emails &
									Notifications</a></li>
							<li class="list-group-item active"><a href="javascript:void(0)">Billing</a></li>
							<li class="list-group-item"><a href="/company-settings/payment">Payment & Financial</a></li>
							<li class="list-group-item"><a href="/company-settings/trust-verification">Trust &
									Verification</a>
							</li>
							<li class="list-group-item"><a href="/company-settings/company-info">Company Info Box</a>
							</li>
						</ul>
					</div>
				</nav>
			</div>
			<!-- Left Menu Ends Here -->

			<div class="col-md-9 profile_setting">
				<div class="profile_setting_wrapper ac_setting">
					<div class="top text-left">
						<h4>Billing Information</h4>
						<p>The following information will be displayed on your invoices:</p>
					</div>
					<form action="">
						<div class="form">
							<div class="form-row">
								<div class="col-md-4 mt-2">
									<label for="">Company Name:</label>
								</div>
								<div class="form-group col-md-8">
									<input type="text" placeholder="" class="form-control" />
								</div>
							</div>
							<div class="form-row">
								<div class="col-md-4 mt-2">
									<label for="">Full Name:</label>
								</div>
								<div class="form-group col-md-8">
									<input type="text" placeholder="" class="form-control" />
								</div>
							</div>
							<div class="form-row">
								<div class="col-md-4">
									<label for="" class="mb-0">Country:</label>
								</div>
								<div class="form-group col-md-8 mt-2">
									<select name="" id="" class="form-control">
										<option value="">United States</option>
										<option value="">Australia</option>
										<option value="">Italy</option>
										<option value="">Others</option>
									</select>
								</div>
							</div>
							<div class="form-row">
								<div class="col-md-4 mt-2">
									<label for="">Address:</label>
								</div>
								<div class="form-group col-md-8">
									<input type="text" placeholder="" class="form-control" />
								</div>
							</div>
							<div class="form-row">
								<div class="col-md-4 mt-2">
									<label for="">City:</label>
								</div>
								<div class="form-group col-md-8">
									<input type="text" placeholder="" class="form-control" />
								</div>
							</div>
							<div class="form-row">
								<div class="col-md-4 mt-2">
									<label for="">Zip Code:</label>
								</div>
								<div class="form-group col-md-8">
									<input type="text" placeholder="" class="form-control" />
								</div>
							</div>
							<div class="form-row">
								<div class="col-md-4 mt-2">
									<label for="">Invoices:</label>
								</div>
								<div class="form-group notifications_table mb-0 mt-2 col-md-8">
									<label class="checkbox">
										<input type="checkbox" name="" value="" checked />
										<span class="checkmark"></span>
										Send me invoices by email.
									</label>
								</div>
							</div>
							<div class="save_button">
								<button type="submit" class="btn">Save Change</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>