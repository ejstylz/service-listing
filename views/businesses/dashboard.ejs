						<div class="col-md-6">
							<div class="location">
								<h3>Location</h3>
								<div class="location_inner">
									<div class="form">
										<div class="form-row">
											<div class="form-group col-md-4">
												<select name="" id="" class="form-control">
													<option readonly>United States</option>
												</select>
											</div>
											<div class="form-group col-md-4">
												<input type="text" placeholder="City" class="form-control"
													value="<%= currentUser.city %>" name="city" />
											</div>
											<div class="form-group col-md-4">
												<input type="text" placeholder="State" class="form-control"
													value="<%= currentUser.state %>" name="state" />
											</div>
										</div>
										<div class="form-row">
											<div class="form-group col-12">
												<input type="text" placeholder="Address" class="form-control"
													value="<%= currentUser.location %>" name="location"
													name="location" />
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="dash_basic_info">
								<h3>Company Information</h3>
								<div class="form">
									<div class="form-row">
										<div class="form-group col-md-6">
											<label for="">Company Name:</label>
											<input type="text" class="form-control" name="companyName"
												value="<%= currentUser.companyName %>" required="" />
										</div>
										<div class="form-group col-md-6">
											<label for="">Slogan:</label>
											<input type="text" class="form-control" value="<%= currentUser.slogan %>"
												name="slogan" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-md-6">
											<label for="">Email:</label>
											<input type="email" class="form-control" value="<%= currentUser.email %>"
												name="email" />
										</div>
										<div class="form-group col-md-6">
											<label for="">Phone Number:</label>
											<input type="tel" class="form-control"
												value="<%= currentUser.phoneNumber %>" name="phoneNumber" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-md-6">
											<label for="">Years In Business:</label>
											<input type="text" class="form-control"
												value="<%= currentUser.yearsInBusiness %>" name="yearsInBusiness" />
										</div>
										<div class="form-group col-md-6">
											<label for="">Directions:</label>
											<input type="url" class="form-control" value="<%= currentUser.directions %>"
												name="directions" />
										</div>
									</div>
									<div class="form-group mb-0">
										<label for="">Website:</label>
										<input type="url" class="form-control" value="<%= currentUser.website %>"
											name="website" />
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<hr />

				<div class="lang_payment">
					<div class="row">
						<div class="col-md-6">
							<div class="single_box">
								<h3>Set Your Language</h3>
								<div class="box_inner">
									<div class="form">
										<div class="form-row">
											<div class="form-group col-9">
												<select name="language" class="form-control" id="text1">
													<option>English</option>
													<option>Spanish</option>
													<option>French</option>
													<option>Polish</option>
													<option>German</option>
													<option>Russian</option>
													<option>Chinese (Mandarin)</option>
													<option>Chinese (Cantonese)</option>
												</select>
											</div>
											<div class="form-group col-3">
												<input type="button" name="" value="Add" class="btn btn-gbz-success" onclick="add_element_to_array_lang();">
											</div>
										</div>
									</div>
									<div class="added_items" id="lang">

										<% let uniqueLanguage = new Set(user.language); %>
										<% let langs = [...uniqueLanguage] %>
										<% langs.forEach(function(lang){ %>
											<span><%= lang %> <a href="javascript:void(0)"><i class="fa fa-times"
														aria-hidden="true"></i></a></span>
										<% }); %>
									</div>
								</div>
							</div>
						</div>

						<div class="col-md-6">
							<div class="single_box">
								<h3>Areas of Expertise</h3>
								<div class="box_inner">
									<div class="form">
										<div class="form-row">
											<div class="form-group col-9">
												<input type="text" id="text2" placeholder="Type Area Expertise and Click Add"
													class="form-control" name="areasOfExpertise" />
											</div>
											<div class="form-group col-3">
												<input type="button" name="" value="Add" class="btn btn-gbz-success add2" onclick="add_element_to_array_exp();">
											</div>
										</div>
									</div>
									<div class="added_items" id="exp">
										<% let uniqueArea = new Set(user.areasOfExpertise); %>
										<% let arr = [...uniqueArea] %>
										<% arr.forEach(function(arr){ %>
											<span><%= arr %> <a href="javascript:void(0)"><i class="fa fa-times"
														aria-hidden="true"></i></a></span>
										<% }); %>

									</div>
								</div>
							</div>
						</div>

						<div class="col-md-6">
							<div class="single_box">
								<h3>Service Areas</h3>
								<div class="box_inner">
									<div class="form">
										<div class="form-row">
											<div class="form-group col-9">
												<input type="text" id="text3" placeholder="Type Service Area and Click Add"
													class="form-control" name="serviceAreas" />
											</div>
											<div class="form-group col-3">
												<input type="button" name="" value="Add" class="btn btn-gbz-success add3" onclick="add_element_to_array_ser();">
											</div>
										</div>
									</div>
									<div class="added_items" id="ser">
										<% let uniqueService = new Set(user.serviceAreas); %>
										<% let servs = [...uniqueService] %>
										<% servs.forEach(function(serv){ %>
											<span><%= serv %> <a href="javascript:void(0)"><i class="fa fa-times"
														aria-hidden="true"></i></a></span>
										<% }); %>
									</div>
								</div>
							</div>
						</div>

						<div class="col-md-6">
							<div class="single_box">
								<h3>Product Used</h3>
								<div class="box_inner">
									<div class="form">
										<div class="form-row">
											<div class="form-group col-9">
												<input type="text" id="text4" placeholder="Type Product and Click Add"
													class="form-control" name="productsUsed" />
											</div>
											<div class="form-group col-3">
												<input type="button" name="" value="Add" class="btn btn-gbz-success add4" onclick="add_element_to_array_pro();">
											</div>
										</div>
									</div>
									<div class="added_items" id="pro">
										<% let uniqueProduct = new Set(user.productsUsed); %>
										<% let prods = [...uniqueProduct] %>
										<% prods.forEach(function(prod){ %>
											<span><%= prod %> <a href="javascript:void(0)"><i class="fa fa-times"
														aria-hidden="true"></i></a></span>
										<% }); %>
									</div>
								</div>
							</div>
						</div>

						<div class="col-md-6">
							<div class="single_box payment_method">
								<h3>Payment Method</h3>
								<div class="box_inner">
									<div class="form">
										<div class="row">
											<div class="col-md-6">
												<label class="check"><i class="fa fa-cc-amex" aria-hidden="true"></i>
													American Express
													<input type="checkbox" name="is_name">
													<span class="checkmark"></span>
												</label>
											</div>
											<div class="col-md-6">
												<label class="check"><i class="fa fa-cc-discover"
														aria-hidden="true"></i> Discover
													<input type="checkbox" name="is_name">
													<span class="checkmark"></span>
												</label>
											</div>
											<div class="col-md-6">
												<label class="check"><i class="fa fa-cc-mastercard"
														aria-hidden="true"></i> Master Card
													<input type="checkbox" name="is_name">
													<span class="checkmark"></span>
												</label>
											</div>
											<div class="col-md-6">
												<label class="check"><i class="fa fa-cc-paypal" aria-hidden="true"></i>
													Paypal
													<input type="checkbox" name="is_name">
													<span class="checkmark"></span>
												</label>
											</div>
											<div class="col-md-6">
												<label class="check"><i class="fa fa-cc-visa" aria-hidden="true"></i>
													Visa
													<input type="checkbox" name="is_name">
													<span class="checkmark"></span>
												</label>
											</div>
											<div class="col-md-6">
												<label class="check"><i class="fa fa-money" aria-hidden="true"></i>
													Cash
													<input type="checkbox" name="is_name">
													<span class="checkmark"></span>
												</label>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="single_box">
								<h3>Tags</h3>
								<div class="box_inner">
									<div class="form">
										<div class="form-row">
											<div class="form-group col-9">
												<input type="text" id="text5" placeholder="Type Tags and Click Add"
													class="form-control" />
											</div>
											<div class="form-group col-3">
												<input type="button" name="" value="Add" class="btn btn-gbz-success add5" onclick="add_element_to_array_tag();">
											</div>
										</div>
									</div>
									<div class="added_items" id="tag">
										<% let uniqueTags = new Set(user.tags); %>
										<% let tags = [...uniqueTags] %>
										<% tags.forEach(function(tag){ %>
											<span><%= tag %> <a href="javascript:void(0)"><i class="fa fa-times"
														aria-hidden="true"></i></a></span>
										<% }); %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<hr />

				<div class="important_social">
					<div class="row">
						<div class="col-md-6">
							<div class="social_add">
								<h3>Add Social Media</h3>
								<div class="social_inner">
									<div class="form-group">
										<div class="dollar_input">
											<input type="url" placeholder="Enter Your Facebook URL" class="form-control"
												name="facebookUrl" value="<%= currentUser.facebookUrl %>" />
											<i class="fa fa-facebook" aria-hidden="true"></i>
										</div>
									</div>
									<div class="form-group">
										<div class="dollar_input">
											<input type="url" placeholder="Enter Your Twitter URL" class="form-control"
												name="twitterUrl" value="<%= currentUser.twitterUrl %>" />
											<i class="fa fa-twitter" aria-hidden="true"></i>
										</div>
									</div>
									<div class="form-group">
										<div class="dollar_input">
											<input type="url" placeholder="Enter Your Instagram URL"
												class="form-control" name="instagramUrl"
												value="<%= currentUser.instagramUrl %>" />
											<i class="fa fa-instagram" aria-hidden="true"></i>
										</div>
									</div>
									<div class="form-group">
										<div class="dollar_input">
											<input type="url" placeholder="Enter Your LinkedIn URL" class="form-control"
												name="linkedinUrl" value="<%= currentUser.linkedinUrl %>" />
											<i class="fa fa-linkedin" aria-hidden="true"></i>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="dash_basic_info">
								<h3>Important Facts</h3>
								<div class="form">
									<div class="form-row">
										<div class="form-group col-md-6">
											<label for="">State License Trade <a href="javascript:void(0)"><i
														title="A certificate/document which grants the permission to carry on a particular trade or business for which it is issued."
														data-toggle="tooltip" class="fa fa-question-circle"
														aria-hidden="true"></i></a></label>
											<input type="text" class="form-control" name="stateLicenseTrade"
												value="<%= currentUser.stateLicenseTrade %>" />
										</div>
										<div class="form-group col-md-6">
											<label for="">License Number <a href="javascript:void(0)"><i
														title="A business license allows you to legally conduct business in your state, city or county."
														data-toggle="tooltip" class="fa fa-question-circle"
														aria-hidden="true"></i></a></label>
											<input type="text" class="form-control" name="licenseNumber"
												value="<%= currentUser.licenseNumber %>" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group col-md-6">
											<label for="">Expiration <a href="javascript:void(0)"><i
														title="The time of your state license Expiration date."
														data-toggle="tooltip" class="fa fa-question-circle"
														aria-hidden="true"></i></a></label>
											<input type="date" class="form-control" name="licenseExpiration"
												value="<%= currentUser.licenseExpiration %>" />
										</div>
										<div class="form-group col-md-6">
											<label for="">Type of Entity <a href="javascript:void(0)"><i
														title="Your form of business determines which income tax return form you have to file."
														data-toggle="tooltip" class="fa fa-question-circle"
														aria-hidden="true"></i></a></label>
											<input type="text" class="form-control" name="entityType"
												value="<%= currentUser.entityType %>" />
										</div>
									</div>
									<div class="form-row">
										<div class="form-group mb-0 col-md-6">
											<label for="">Insurance Type <a href="javascript:void(0)"><i
														title="Insurance is a means of protection from financial loss. It is a form of risk management, primarily used to hedge against the risk of a contingent or uncertain loss."
														data-toggle="tooltip" class="fa fa-question-circle"
														aria-hidden="true"></i></a></label>
											<input type="text" class="form-control" name="insuranceType"
												value="<%= currentUser.insuranceType %>" />
										</div>
										<div class="form-group mb-0 col-md-6">
											<label for="">Insurance Expiration <a href="javascript:void(0)"><i
														title="The time of your Insurance Expiration date."
														data-toggle="tooltip" class="fa fa-question-circle"
														aria-hidden="true"></i></a></label>
											<input type="date" class="form-control mb-3" name="insuranceExpiration"
												value="<%= currentUser.insuranceExpiration %>" />
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<hr />

