<!-- Profile Picture Modal -->
<div class="modal certificate_modal dashboard_wrap fade" id="picture">
	<div class="modal-dialog modal-lg modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h3>Change Profile Picture</h3>
				<button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"
						aria-hidden="true"></i></button>
			</div>
			<div class="modal-body">
				<form action="/profile-picture?_method=PUT" method="POST" class="single_upload" enctype="multipart/form-data">
					<div class="upload_header">
						<h5>Upload Profile Picture</h5>
					</div>
					<div class="upload_area">
						<div class="form-group">
							<input type="file" name="profilePicture" id="file-1" class="inputfile inputfile-1" />
							<label for="file-1">
								<div class="upload_fils">
									<div class="icon">
										<i class="fa fa-cloud-upload" aria-hidden="true"></i>
									</div>
									<h5>Drag & Drop a Files Here <br /> or <br /> Click to Upload</h5>
								</div>
							</label>
						</div>
					</div>
				</form>
			</div>
			<div class="save_button text-right">
				<button type="submit" class="btn btn-gbz-success">Save</button>
			</div>
		</div>
	</div>
</div>
</div>

