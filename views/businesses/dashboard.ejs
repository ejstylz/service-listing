		<div class="container">
			<h1>Dashboard <b>/</b> <span>Home</span></h1>
		</div>
	</div>
</section>

<form action="/dashboard?_method=PUT" method="POST" enctype="multipart/form-data">
	<section class="dashboard_middle">
		<div class="container_gbz">
			<div class="dashboard_home dashboard_wrap">
				<div class="upload_files_part">
					<div class="row">
						<div class="col-md-6">
							<div class="single_upload">
								<div class="upload_header">
									<h5>Company Logo</h5>
								</div>
								<div>
									<div class="form-group" align="center">
