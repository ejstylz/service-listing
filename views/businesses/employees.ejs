<% layout('layouts/companyEmployeesBoilerplate') -%>

<% var alph = ["a", "b", "c", "d", "e", "f", "g", "h", "i", "j", "k", "l", "m", "n", "o", "p", "q", "r", "s", "t", "u", "v", "w", "x", "y", "z"] %>
<% var alpha = ["aa", "bb", "cc", "dd", "ee", "ff", "gg", "hh", "ii", "jj", "kk", "ll", "mm", "nn", "oo", "pp", "qq", "rr", "ss", "tt", "uu", "vv", "wx", "xx", "yy", "zz"] %>


<section class="dashboard_banner">
	<div class="overlay">
		<div class="container">
			<h1>Dashboard <b>/</b> <span>Employees</span></h1>
		</div>
	</div>
</section>


<section class="dashboard_middle">
	<div class="container_gbz">
		<div class="dashboard_empoyees dashboard_wrap">
			<div class="employees_wrapper">
				<h3>Your Company Employees</h3>
				<div class="inner_part">
					<div class="row">
						<div class="col-lg-3 col-md-6">
							<div class="single_employee add_employee">
								<div class="text-center">
									<a class="" href="#addNewEmployee" data-toggle="modal">
										<i class="fa fa-user-plus" aria-hidden="true"></i>
										<div class=""><span>Add Employee</span></div>
									</a>
								</div>
							</div>
						</div>
						<% for (var i = 0; i < employee.length; i++) { %>
						<div class="col-lg-3 col-md-6">
							<div class="single_employee">
								<div class="employee_profile">
									<img src="<%= employee[i].imageUrl %>" class="img-fluid" alt="" />
								</div>
								<div class="employee_info">
									<h5><%= employee[i].name %></h5>
									<h6><%= employee[i].position %></h6>
									<p><%= employee[i].description %></p>
								</div>
								<div class="action_button">
									<ul>
										<li><a href="#<%= alph[i] %>" data-toggle="modal"><i title="Edit"
													data-toggle="tooltip" class="fa fa-pencil-square-o"
													aria-hidden="true"></i></a></li>
										<li><a href="#<%= alpha[i] %>" data-toggle="modal"><i title="Delete"
													data-toggle="tooltip" class="fa fa-trash-o"
													aria-hidden="true"></i></a></li>
									</ul>
								</div>
							</div>
						</div>
						<% }; %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>



<!-- Add New Employee Modal Starts From Here -->
<div class="modal certificate_modal dashboard_wrap fade" id="addNewEmployee">
	<div class="modal-dialog modal-lg modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h3>ADD New Employee Information</h3>
				<button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"
						aria-hidden="true"></i></button>
			</div>
			<div class="modal-body">
				<form action="/employee" method="POST" enctype="multipart/form-data">
					<div class="form">
						<div class="single_upload">
							<div class="upload_header">
								<h5>Upload Employee Photo</h5>
							</div>
							<div class="upload_area">
								<div class="form-group">
									<input type="file" name="image" id="file-1" class="inputfile inputfile-1" />
									<label for="file-1">
										<div class="upload_fils">
											<div class="icon">
												<i class="fa fa-cloud-upload" aria-hidden="true"></i>
											</div>
											<h5>Drag & Drop a Photo Here <br /> or <br /> Click to Upload</h5>
										</div>
									</label>
								</div>
							</div>
						</div>
						<div class="form-row">
							<div class="form-group col-md-6">
								<div class="dollar_input">
									<input type="text" name="name" placeholder="Employee Name" class="form-control" />
									<i class="fa fa-user-o" aria-hidden="true"></i>
								</div>
							</div>
							<div class="form-group col-md-6">
								<div class="dollar_input">
									<input type="text" name="position" placeholder="Employee Profession"
										class="form-control" />
									<i class="fa fa-snowflake-o" aria-hidden="true"></i>
								</div>
							</div>
						</div>
						<div class="form-group">
							<textarea name="description" placeholder="Write a Short Bio..." id="myText" cols="30"
								rows="3" class="form-control" maxlength="180"></textarea>
							<div class="form-text text-right">
								<span id="wordCount">0</span>/<span>180</span>
							</div>
						</div>
						<div class="save_button text-right">
							<button type="submit" class="btn btn-gbz-success">Save</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<!-- Add New Employee Modal Ends Here -->



<!-- Edit Employee Modal Starts From Here -->
<% for (var i = 0; i < employee.length; i++) { %>
<div class="modal certificate_modal dashboard_wrap fade" id="<%= alph[i] %>">
	<div class="modal-dialog modal-lg modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h3>Edit Employee Information</h3>
				<button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"
						aria-hidden="true"></i></button>
			</div>
			<div class="modal-body">
				<form action="/employee/<%= employee[i].id %>?_method=PUT" method="POST" enctype="multipart/form-data">
					<div class="form">
						<div class="single_upload">
							<div class="upload_header">
								<h5>Upload Employee Photo</h5>
							</div>
							<div class="upload_area">
								<div class="form-group">
									<input type="file" name="image" id="file-2" class="inputfile inputfile-1" />
									<label for="file-2">
										<div class="upload_fils">
											<div class="icon">
												<i class="fa fa-cloud-upload" aria-hidden="true"></i>
											</div>
											<h5>Drag & Drop a Photo Here <br /> or <br /> Click to Upload</h5>
										</div>
									</label>
								</div>
							</div>
						</div>
						<div class="form-row">
							<div class="form-group col-md-6">
								<div class="dollar_input">
									<input type="text" name="name" value="<%= employee[i].name %>"
										placeholder="Employee Name" class="form-control" />
									<i class="fa fa-user-o" aria-hidden="true"></i>
								</div>
							</div>
							<div class="form-group col-md-6">
								<div class="dollar_input">
									<input type="text" name="position" value="<%= employee[i].position %>"
										placeholder="Employee Profession" class="form-control" />
									<i class="fa fa-snowflake-o" aria-hidden="true"></i>
								</div>
							</div>
						</div>
						<div class="form-group">
							<textarea name="description" placeholder="Write a Short Bio..." id="myText2" cols="30"
								rows="3" class="form-control" maxlength="180"><%= employee[i].description %></textarea>
							<div class="form-text text-right">
								<span id="wordCount2"><%= employee[i].description.length %></span>/<span>180</span>
							</div>
						</div>
						<div class="save_button text-right">
							<button type="submit" class="btn btn-gbz-success">Save</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<% } %>
<!-- Edit Employee Modal Ends Here -->

<!-- Delete Employee Modal Starts From Here -->
<% for (var i = 0; i < employee.length; i++) { %>
<div class="modal certificate_modal dashboard_wrap fade" id="<%= alpha[i] %>">
	<div class="modal-dialog modal-lg modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h3>Delete Employee</h3>
				<button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"
						aria-hidden="true"></i></button>
			</div>
			<div class="modal-body">
				<form action="/employee/<%= employee[i].id %>?_method=DELETE" method="POST"
					enctype="multipart/form-data">
					<div class="form">

						<div class="form-group">
							<h2>Are you sure you want to delete this employee?</h2>
						</div>
						<div class="save_button text-right">
							<button type="submit" class="btn btn-danger">Delete</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<% } %>
<!-- Delete Employee Modal Ends Here -->



<section class="update_now_button_section">
	<div class="container_gbz">
		<div class="row">
			<div class="col-md-7">
				<p><span>*</span> Click <b>Save Changes</b> to update latest added detail (s).</p>
			</div>
			<div class="col-md-5">
				<div class="save_change_button">
					<button type="button" class="btn btn-gbz-success">Save Changes</button>
				</div>
			</div>
		</div>
	</div>
</section>