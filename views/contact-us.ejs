<% layout('layouts/indexBoilerplate') -%>

<div class="full_wrapper header_bottom_bg">
	<div class="wrapper">
		<div class="header_bottom">
			<h3 class="contact_us">Contact Us <span class="separator">&#8739;</span> <span class="paragraph">Building
					Communities Together</span></h3>
		</div>
	</div>
</div>

<div class="full_wrapper contact_write_wrapper_bg">
	<div class="container_gbz">
		<section class="contact_write_wrapper">
			<div class="row">
				<div class="col-md-6">
					<div class="contact">
						<img src="../images/businessmen-businesspeople-businesswomen.jpg" alt="" />
						<p class="contact_details_p">We're here to help you out the best we can, we look forward to
							seeing your message. Please do write down in the contact form or email us, whichever you
							prefer.</p>
						<div class="contact_way">
							<div class="single_way">
								<div class="icon">
									<i class="fa fa-map-marker" aria-hidden="true"></i>
								</div>
								<div class="content">
									<p>Chicago, Illinois 60623-1325</p>
								</div>
							</div>
							<div class="single_way">
								<div class="icon">
									<i class="fa fa-envelope" aria-hidden="true"></i>
								</div>
								<div class="content">
									<p><a href="mailto:support@gabazzo.com">support@gabazzo.com</a></p>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="col-md-6">
					<form action="" class="form">
						<h4>How Can We Help?</h4>
						<div class="form-row">
							<div class="form-group col-md-6">
								<div class="name">
									<label for="name">First Name</label>
									<input type="text" class="form-control" />
								</div>
							</div>
							<div class="form-group col-md-6">
								<div class="name">
									<label for="name">Last Name</label>
									<input type="text" class="form-control" />
								</div>
							</div>
						</div>
						<div class="form-group">
							<label for="email">Email</label>
							<input type="email" class="form-control" />
						</div>
						<div class="form-group">
							<label for="subject">Subject</label>
							<input type="text" class="form-control" />
						</div>
						<div class="form-group">
							<label for="message">Message</label>
							<textarea name="" class="form-control" id="" cols="30" rows="4"></textarea>
						</div>
						<button type="submit">Submit</button>
					</form>
				</div>
			</div>
		</section>
	</div>
</div>